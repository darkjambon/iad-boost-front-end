{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended", // Recommandations de base ESLint
    "plugin:@typescript-eslint/recommended", // Recommandations TypeScript (si utilisé)
    "plugin:prettier/recommended" // Intégration Prettier
  ],
  "parser": "@typescript-eslint/parser", // Utiliser le parseur TypeScript (si nécessaire)
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint", // Plugin TypeScript
    "prettier" // Plugin Prettier
  ],
  "rules": {
    "prettier/prettier": "error", // Vérifie les règles Prettier
    "no-unused-vars": "warn", // Exemple : avertissement pour les variables inutilisées
    "@typescript-eslint/no-explicit-any": "warn" // Exemple : avertissement pour les "any" explicites
  }
}
